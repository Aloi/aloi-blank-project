<?xml version="1.0" encoding="UTF-8"?>
<phruts-config>
	<form-beans>
		<form-bean name="logonForm" type="Form_Logon" />
	</form-beans>
	<action-mappings>
		<action path="/login" forward="WEB-INF/view/login-example/login.php" />
		<action path="/loginProcess" type="Action_Logon" name="logonForm" validate="true"
			input="WEB-INF/view/login-example/login.php" scope="request">
			<forward name="success" path="WEB-INF/view/login-example/success.php" />
			<forward name="failure" path="WEB-INF/view/login-example/login.php" />
		</action>
	</action-mappings>
	<message-resources parameter="ApplicationResources"/>
</phruts-config>